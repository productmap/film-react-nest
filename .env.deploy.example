# Это файл-шаблон для конфигурации развертывания.
# Скопируйте его в .env.deploy и заполните своими значениями.

# --- Настройки для скрипта deploy.sh ---

# Имя для создаваемой виртуальной машины
VM_NAME="film-app-vm"
# Имя сервисного аккаунта, который будет создан и привязан к ВМ
SA_NAME="film-deployer"
# URL вашего форка репозитория
GIT_REPO_URL="https://github.com/YOUR_USERNAME/film-react-nest.git"
# Путь к вашему ПУБЛИЧНОМУ SSH-ключу
SSH_KEY_PATH="$HOME/.ssh/FILE_ID.pub"
# Имя пользователя на ВМ
VM_USER="ubuntu"

# --- Настройки для приложения ---

# Окружение для Node.js
NODE_ENV="production"
PORT=3000

# Драйвер базы данных ('mongodb' или 'postgres')
DATABASE_DRIVER="postgres"

# Конфигурация PostgreSQL
# Суперпользователь postgres
POSTGRES_USERNAME="postgres"
# Задайте надежный пароль
POSTGRES_PASSWORD="YOUR_SECURE_SUPERUSER_PASSWORD"
# Выделенный пользователь для приложения
DB_USER="film"
# Задайте надежный пароль
DB_PASSWORD="YOUR_SECURE_APP_PASSWORD"
# Имя БД для приложения
DB_NAME="prac"
